<!-- dialog_certificado.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText android:id="@+id/editTextNomeCertificado" android:hint="Nome do certificado" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/editTextInstituicao" android:hint="Instituição" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/editTextAno" android:hint="Ano" android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/buttonSalvarCertificado" android:text="Salvar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>
