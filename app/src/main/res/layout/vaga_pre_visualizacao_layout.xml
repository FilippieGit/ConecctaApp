<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/preVisualizacaoMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TEXT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <!-- Botão de Voltar -->
        <ImageView
            android:id="@+id/btnVoltarDetalheVagaPre"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/baseline_arrow_back" />

        <ImageView
            android:id="@+id/preVisualizacaoImageLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="Logo da empresa"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/preVisualizacaoTextTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/font"
            android:text="Título da Vaga"
            android:textAlignment="center"
            android:textColor="@color/cinza"
            android:textSize="22sp" />

        <!-- Nível de Experiência -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:text="Nível de Experiência:"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/preVisualizacaoTextNivelExperiencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/font"
            android:text="Júnior"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <!-- Tipo de Contrato -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:text="Tipo de Contrato:"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/preVisualizacaoTextTipoContrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/font"
            android:text="CLT"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <!-- Área de Atuação -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:text="Área de Atuação:"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/preVisualizacaoTextAreaAtuacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/font"
            android:text="Tecnologia da Informação"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/preVisualizacaoTextLocalizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:text="Localização: Cidade - UF"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/preVisualizacaoTextSalario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:text="Salário: R$ 3.000,00"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <!-- Benefícios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:text="Benefícios:"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/preVisualizacaoTextBeneficios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/font"
            android:text="Vale transporte, Vale refeição"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <!-- Habilidades Desejáveis (Chips) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:text="Habilidades Desejáveis:"
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/preVisualizacaoChipGroupHabilidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            app:chipSpacing="8dp">
            <!-- Adicione chips dinamicamente via código -->
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/preVisualizacaoTextDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:text="Descrição da vaga aparecerá aqui."
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/preVisualizacaoTextRequisitos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/font"
            android:text="Requisitos: experiência, graduação, etc."
            android:textColor="@color/cinza"
            android:textSize="14sp" />

        <!-- Botões Publicar e Editar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPreVisualizacaoPublicar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="@color/diferencial"
                android:fontFamily="@font/font"
                android:text="Publicar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:cornerRadius="8dp" /> <!-- Ajuste o valor para controlar o arredondamento -->

            <ImageButton
                android:id="@+id/btnPreVisualizacaoBEditar"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_margin="3dp"
                android:background="@drawable/edit_button_background"
                android:contentDescription="Editar"
                android:src="@drawable/baseline_edit"
                app:tint="@android:color/white" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
