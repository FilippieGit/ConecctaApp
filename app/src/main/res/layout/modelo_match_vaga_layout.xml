<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPrincipalActivity">

    <Button
        android:id="@+id/buttondaempresa"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/button_shape"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/idlogodaempresa"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/perfil"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/idnomeempresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/idlogodaempresa"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/font"
        android:text="Nome do canditato"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/idinfoempresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idnomeempresa"
        android:layout_toEndOf="@id/idlogodaempresa"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/font"
        android:text="Sexo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idinfoempresa"
        android:layout_toEndOf="@id/idlogodaempresa"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/font"
        android:text="Idade"
        />

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:src="@drawable/arrow" />

</RelativeLayout>